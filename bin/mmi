#!/usr/bin/env php
<?php

use Mmi\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;

if (PHP_SAPI !== 'cli') {
    echo 'Must be run as a CLI application';
    exit(1);
}

set_time_limit(0);

/**
 * @var Composer\Autoload\ClassLoader $loader
 */
//określanie ścieżki
define('BASE_PATH', realpath(dirname(__FILE__)) . '/../');

$loader = require BASE_PATH . 'vendor/autoload.php';

$application = new Application();
$application->add((new \Mmi\Console\DbDeployCommand()));
$application->add((new \Mmi\Console\FlushCacheCommand()));
$application->add((new \Mmi\Console\DaoRenderCommand()));
$application->run();
